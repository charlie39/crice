#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head -n 20)" ;;
	2) notify-send "CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head -n20)" ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- tap to see memory hogs
- middle click to see cpu hogs
- Shift+Left Click to open config" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
[ $DISPLAY ] && free -h | sed -n '2{p;q}' | awk '{print "ðŸ§ ", $3 "/" $2}'
