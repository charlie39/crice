#!/usr/bin/sh
set -e


if [[ -n $SSH_CLIENT ]] || [[ -n $SSH_TTY ]]; then
    lf "$@"
    exit
fi



if [[ -n $DISPLAY ]]; then

    cleanup() {
        exec 3>&-
        rm "$FIFO_UEBERZUG"
    }

    export FIFO_UEBERZUG="/tmp/lf-ueberzug-$$"
    mkfifo $FIFO_UEBERZUG
    ueberzug layer -s <"$FIFO_UEBERZUG" -p json &
    exec 3>"$FIFO_UEBERZUG"
    trap cleanup EXIT

    if ! [ -d "$HOME/.cache/lf" ] ; then
        mkdir -p "$HOME/.cache/lf"
    fi

    lf "$@" 3>&-
else
    exec lf "$@"
fi
